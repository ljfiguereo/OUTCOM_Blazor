<script>
    // Función para mostrar/ocultar contraseñas
    function togglePasswordVisibility(inputId) {
        const input = document.getElementById(inputId);
        const icon = input.nextElementSibling.querySelector('i');
        
        if (input.type === 'password') {
            input.type = 'text';
            icon.classList.remove('fa-eye');
            icon.classList.add('fa-eye-slash');
        } else {
            input.type = 'password';
            icon.classList.remove('fa-eye-slash');
            icon.classList.add('fa-eye');
        }
    }

    // Función para evaluar la fortaleza de la contraseña
    function checkPasswordStrength(password) {
        let score = 0;
        let feedback = [];
        
        if (!password) {
            return { score: 0, text: '-', class: '' };
        }
        
        // Longitud
        if (password.length >= 8) score += 25;
        else feedback.push('al menos 8 caracteres');
        
        // Mayúsculas
        if (/[A-Z]/.test(password)) score += 25;
        else feedback.push('mayúsculas');
        
        // Minúsculas
        if (/[a-z]/.test(password)) score += 25;
        else feedback.push('minúsculas');
        
        // Números
        if (/\d/.test(password)) score += 15;
        else feedback.push('números');
        
        // Caracteres especiales
        if (/[^\w\s]/.test(password)) score += 10;
        else feedback.push('símbolos');
        
        let strengthText, strengthClass;
        
        if (score < 30) {
            strengthText = 'Muy débil';
            strengthClass = 'bg-danger';
        } else if (score < 60) {
            strengthText = 'Débil';
            strengthClass = 'bg-warning';
        } else if (score < 90) {
            strengthText = 'Buena';
            strengthClass = 'bg-info';
        } else {
            strengthText = 'Excelente';
            strengthClass = 'bg-success';
        }
        
        return { score, text: strengthText, class: strengthClass };
    }

    // Actualizar indicador de fortaleza en tiempo real
    function updatePasswordStrength() {
        const passwordInput = document.getElementById('newPassword');
        const strengthBar = document.getElementById('passwordStrengthBar');
        const strengthText = document.getElementById('passwordStrengthText');
        
        if (passwordInput && strengthBar && strengthText) {
            const password = passwordInput.value;
            const strength = checkPasswordStrength(password);
            
            strengthBar.style.width = strength.score + '%';
            strengthBar.className = 'progress-bar ' + strength.class;
            strengthBar.setAttribute('aria-valuenow', strength.score);
            strengthText.textContent = strength.text;
        }
    }

    // Inicializar eventos cuando el modal se abre
    document.addEventListener('DOMContentLoaded', function() {
        const changePasswordModal = document.getElementById('changePasswordModal');
        if (changePasswordModal) {
            changePasswordModal.addEventListener('shown.bs.modal', function() {
                const newPasswordInput = document.getElementById('newPassword');
                if (newPasswordInput) {
                    // Enfocar el primer campo
                    newPasswordInput.focus();
                    
                    // Agregar event listener para fortaleza de contraseña
                    newPasswordInput.addEventListener('input', updatePasswordStrength);
                    
                    // Inicializar indicador
                    updatePasswordStrength();
                }
            });
            
            changePasswordModal.addEventListener('hidden.bs.modal', function() {
                // Limpiar indicador cuando se cierra el modal
                const strengthBar = document.getElementById('passwordStrengthBar');
                const strengthText = document.getElementById('passwordStrengthText');
                if (strengthBar && strengthText) {
                    strengthBar.style.width = '0%';
                    strengthBar.className = 'progress-bar';
                    strengthText.textContent = '-';
                }
            });
        }
    });
</script>